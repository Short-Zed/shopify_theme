    {%- section 'header' -%}
    {%- section 'newsletter-popup' -%}

      <main class="main-content" id="MainContent">
        {{ content_for_layout }}
      </main>

      {%- section 'footer-promotions' -%}
      {%- section 'footer' -%}
    </div>
  </div>

  {%- liquid
    render 'video-modal'
    render 'photoswipe-template'
    render 'tool-tip'
  -%}

  <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  <script>
  $( document ).ready(function() {
    var link_container = $('.site-footer__linklist');
    if (link_container.length > 0){
      link_container.find('a[href="https://bergamotbeaute.shiprocket.co/tracking"]').attr("target","_blank");  
    }
  });
  </script>
  <script src="{{ 'component-cart-offer.js' | asset_url }}" defer="defer"></script>
  {% comment %} <script src="{{ 'custom-gift-card.js' | asset_url }}" defer="defer"></script> {% endcomment %}
  <!-- flowing heart on touch effect js  --> 
  {% if settings.enable_heart_pops %}
  <script src="{{ 'flowing-heart.js' | asset_url }}" defer="defer"></script>
  {% endif %}
  {% if settings.enable_header_animation %}
    <script src="{{ 'header-animation.js' | asset_url }}" defer="defer"></script>
  {% endif %}
  {% if template.name == 'product' %}
    <script src="{{ 'component-product.js' | asset_url }}" defer="defer"></script>
  {% endif %}
</body>
