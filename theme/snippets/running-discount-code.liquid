<div class="running_discount">
  <div class="header">
    <img src="{{ "discount-icon.gif" |  asset_url }}">
   {%  if settings.title %} <h1 class="heading">
    {{ settings.title }}
  </h1> {%  endif %}
</div>
   <div class="disount_card_wrapper">
    <div class="discount_card">
      <h2 class="title">{{ settings.discount_title1 }} </h2>
      <div class="content"> {% if settings.discount_description1 %} 
          {{settings.discount_description1 }}
         {% endif %}
          <button class="code" onclick="copyCode.call(this)" value="{{settings.discount_Code1}}" >{{settings.discount_Code1}}</button>
      </div>
    </div>
    <div class="discount_card">
      <h2 class="title">{{ settings.discount_title2 }} </h2>
      <div class="content"> {% if settings.discount_description2 %} 
          {{settings.discount_description2 }}
         {% endif %} 
          <button class="code" onclick="copyCode.call(this)" value="{{settings.discount_Code2}}">{{settings.discount_Code2}}</button>
        </div>
      </div>
    <div class="discount_card">
      <h2 class="title">{{ settings.discount_title3 }} </h2>
      <div class="content"> {% if settings.discount_description3 %} 
          {{settings.discount_description3 }}
         {% endif %}
         <button class="code" onclick="copyCode.call(this)" value="{{settings.discount_Code3}}">{{settings.discount_Code3}}</button>
      </div>
    </div>
    <div class="discount_card">
      <h2 class="title">{{ settings.discount_title4 }} </h2>
      <div class="content"> 
         {% if settings.discount_description4 %} 
          {{settings.discount_description4 }}
         {% endif %}
         <button class="code" onclick="copyCode.call(this)" value="{{settings.discount_Code4}}">{{settings.discount_Code4}}</button>
    </div>
  </div>
</div>
</div>
<style>

    .disount_card_wrapper {
        display: flex;
        gap: 2em;
        align-items: center;
        justify-content: flex-start;
        padding:0.5em 0;
        overflow-x: scroll;
    }
    
    .discount_card {
    background: #e0f2e8;
    min-width: 300px;
    margin: 0 auto;
    padding: 1em;
    position: relative;
    top: 0;
    left: 0;
    color: #000;
    border-radius: 5px;
    margin-bottom: 0.5em;
    border: 2px dashed #158747;
}
.discount_card .content button.code {
  padding: 2px 4px;
  width: max-content;
  border: 1px dotted #2b4949;
  position: absolute;
  right: 1em;
  top: 0.7em;
  font-size: 12px;
}
    .discount_card h2.title {
        margin: 0;
        margin-bottom: 5px;
        font-weight: bold;
        color: #065a2b;
        text-transform: uppercase;
        font-size: 14px;
    }
    
    .discount_card .content >p {
        font-size: 12px;
    }
  
    .discount-code >p {
        margin: 0;
        position: absolute;
        width: 100%;
        height: 20px;
        font-size: 10px;
    }
    .discount_card .content >p {
      margin: 0;
  }
  .running_discount .header {
    display: flex;
    justify-content: flex-start;
    align-items: center;
    gap: 5px;
}

.running_discount .header >img {
    max-width: 30px;
}

.running_discount .header h1.heading {
    margin: 0;
    text-transform: capitalize;
    font-size: 18px;
    font-weight: bold;
}
.running_discount {
  margin-bottom: 25px;
}
.discount_card .content button.code:focus {
  border: 1px solid #000;
}
@media (max-width:768px){
  .running_discount .header h1.heading {
    font-size: 16px;
}
.discount_card {
  max-width: 70%;
  min-width:250px;
}
.discount_card h2.title {
  font-size: 12px;
}

}
</style>   
<script>

  function copyCode() {
    // Get the text field
    var copyText = document.getElementById("code");
    // Select the text field
    var copy= this.value;
     // Copy the text inside the text field
    navigator.clipboard.writeText(copy);

    
  }
  
</script>  