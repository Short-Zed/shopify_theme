  class="cart__items"
  data-upsell-count="{% if upsell_count == blank %} 0 {% else %}{{upsell_count}}{% endif %}"
  data-gift-id="{{ gift_id }}"
  data-count="{{ cart.item_count }}"
  data-cart-subtotal="{{ cart.total_price }}">

  {% if cart.item_count  == 1 %} 
    <style>
      .bogo_wrapper.one{
        display:block;
      }
      .bogo_wrapper.two{
        display:none;
      }
